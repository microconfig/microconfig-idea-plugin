<idea-plugin>
    <idea-version since-build="170.*"/>
    <id>io.microconfig.idea-plugin</id>
    <name>Microconfig.io</name>
    <vendor email="support@microconfig.io" url="http://microconfig.io">Microconfig.IO</vendor>

    <description><![CDATA[
    Plugin for Microconfig.io framework<br>
    &#183; <em> Easy navigation between configuration components</em><br>
    &#183; <em> Hints of placeholder values</em>
    ]]>
    </description>

    <depends>com.intellij.modules.lang</depends>

    <actions>
        <group id="Microconfig.PluginMenu" text="Microconfig" description="Microconfig menu" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="Microconfig.JumpToAction" class="io.microconfig.plugin.actions.jumps.JumpAction" text="Jump to component"
                    description="Jumps to component">
                <keyboard-shortcut first-keystroke="F10" keymap="$default"/>
            </action>
            <action id="Microconfig.ResolveAction" class="io.microconfig.plugin.actions.placeholders.ResolvePlaceholderAction" text="Resolve placeholder"
                    description="Resolves placeholder value for all ENVs">
                <keyboard-shortcut first-keystroke="control F10" keymap="$default"/>
            </action>

        </group>
    </actions>
</idea-plugin>